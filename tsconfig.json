{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015", "es5", "es6", "es7", "dom"],
    "target": "esnext",
    "jsx": "react",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include":[
    "./src/**/*"
  ]
}
